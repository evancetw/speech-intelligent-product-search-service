    /// <summary>
    /// 搜尋並回傳原始查詢字串
    /// </summary>
    /// <param name="requestAction"></param>
    /// <typeparam name="T"></typeparam>
    /// <returns></returns>
    private async Task<SearchResultWithRawStringResponse<T>> SearchAndReturnRawQueryAsync<T>(Action<SearchRequestDescriptor<T>>? requestAction)
        where T : class
    {
        var searchRequest = new SearchRequestDescriptor<T>();
        searchRequest.Index("products");

        requestAction?.Invoke(searchRequest);

        var rawQuery = this.GetRawQueryAsync(searchRequest);
        var searchResponse = await this.ElasticsearchClient.SearchAsync(searchRequest);
        return new SearchResultWithRawStringResponse<T>(searchResponse, rawQuery);
    }

    /// <summary>
    /// 取得 ElasticSearch 查詢的原始字串
    /// </summary>
    /// <param name="searchRequest"></param>
    /// <typeparam name="T"></typeparam>
    /// <returns></returns>
    private string GetRawQueryAsync<T>(SearchRequestDescriptor<T> searchRequest)
    {
        var rawQuery = this.ElasticsearchClient.RequestResponseSerializer.SerializeToString(searchRequest);

        Console.WriteLine($"ElasticSearch Request: {rawQuery}");

        return rawQuery;
    }


    public class SearchResultWithRawStringResponse<T> where T : class
    {
        public SearchResponse<T> SearchResponse { get; set; }
        public string RawQuery { get; set; }

        public SearchResultWithRawStringResponse(SearchResponse<T> searchResponse, string rawQuery)
        {
            SearchResponse = searchResponse;
            RawQuery = rawQuery;
        }
    }

