    protected override async Task OnInitializedAsync()
    {
        // Get parameters from query string
        var uri = new Uri(Navigation.Uri);
        var queryString = System.Web.HttpUtility.ParseQueryString(uri.Query);

        SearchModelObj.SearchText = queryString["q"];
        SearchModelObj.SelectedCategory = queryString["category"];
        SearchModelObj.FilterBrands = queryString["brands"];
        SearchModelObj.SortOption = queryString["sort"];

        // Load categories from Elasticsearch
        var categoryResponse = await ElasticsearchClient.SearchAsync<Product>(s => s
            .Size(0)
            .Aggregations(a => a
                .Add("categories", aggregation => aggregation
                    .Terms(t => t
                        //.Field(f => f.Category.Suffix("keyword"))
                        .Field("category")
                        .Size(100)
                    )
                )
            )
        );

        Categories = categoryResponse.Aggregations.GetStringTerms("categories")
            .Buckets.Select(b => b.Key.ToString()).ToList();

        // var categoryResponse = await SearchAndReturnRawQueryAsync<Product>(rd =>
        // {
        //     rd.Size(0);
        //
        //     rd.Aggregations(a => a
        //         .Terms("categories", t => t
        //             .Field("category")
        //             .Aggregations(aa => aa
        //                 .Sum("total_payment", sa => sa
